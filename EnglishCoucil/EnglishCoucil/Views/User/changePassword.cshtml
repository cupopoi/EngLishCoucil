
@{
    ViewBag.Title = "changePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


   @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="row justify-content-center bg-image mx-0 mb-5">
            <div class="col-lg-6 py-5">
                <div class="bg-white p-5 my-5">
                    <h1 class="text-center mb-4">Change Password</h1>
                    <form>
                        <div class="form-row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="text" class="form-control bg-light border-0" placeholder="Your Password" name="Password" style="padding: 30px 20px;">
                                    <div style="color:red; text-align:center">@ViewData["Loi1"]</div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="password" class="form-control bg-light border-0" placeholder="New Password" name="NewPassword" style="padding: 30px 20px;">
                                    <div style="color:red; text-align:center">@ViewData["Loi2"]</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input type="password" class="form-control bg-light border-0" placeholder="Confirm Your Password" name="ConfirmPassword" style="padding: 30px 20px;">
                                    <div style="color:red; text-align:center">@ViewData["Loi3"]</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row justify-content-center">
                            <div class="col-sm-6">
                                <button class="btn btn-primary btn-block" type="submit" style="height: 60px;">Submit</button>
                            </div>
                        </div>
                        @if (Session["IDhv"] != null)
                        {
                            <div class="text-center">
                                <a class="small" href="@Url.Action("forgetPassword", "User", new { IDtk = Session["IDtk"], IDhv = Session["IDhv"] })">Forget your password?</a>
                            </div>
                        }
                        else
                        {
                            <div></div>
                        }

                    </form>
                </div>
            </div>
        </div>
    }

