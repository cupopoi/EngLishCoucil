@if (Session["User"] != null)
{
    <div class="nav-item">
        <a href="#" class="nav-link">Welcome, @Session["User_name"]</a>
    </div>
    <div class="nav-item">
        <a href="@Url.Action("Logoff", "User", null, Request.Url.Scheme)" class="nav-link">Logout</a>
    </div>
}
else
{
    <a href="@Url.Action("Register", "User", null , Request.Url.Scheme)" class="btn btn-primary py-2 px-4 d-none d-lg-block" style="margin-right:5px;">Sign Up</a>
    <a href="@Url.Action("Login", "User", null , Request.Url.Scheme)" class="btn btn-primary py-2 px-4 d-none d-lg-block">Sign In</a>
}
