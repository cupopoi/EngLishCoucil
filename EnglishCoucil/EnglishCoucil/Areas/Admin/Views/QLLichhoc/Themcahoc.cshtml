@model EnglishCoucil.Areas.Admin.Data.LichHoc

@{
    ViewBag.Title = "Themcahoc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm ca học</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "HomeAdmin", new { Area = "Admin" })">Home</a></li>
                    <li class="breadcrumb-item active">Thêm ca học</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="content">
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <b>Thời gian bắt đầu:</b>
                    <div class="col-sm-12">
                        <input type="time" class="form-control form-control-user"
                               placeholder="Nhập thời gian bắt đầu (Ex: 07:00)" name="TGbatdau" step="300">
                        <div style="color:red;">@ViewData["Loi1"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <b>Thời gian kết thúc:</b>
                    <div class="col-sm-12">
                        <input type="time" class="form-control form-control-user"
                               placeholder="Nhập thời gian kết thúc (Ex: 09:00)" name="TGketthuc" step="300">
                        <div style="color:red;">@ViewData["Loi2"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <b>Ngày:</b>
                    <div class="col-sm-12">
                        <input type="text" id="txtNgay" name="Ngay" placeholder="dd/mm/yyyy" />
                        <div style="color:red;">@ViewData["Loi3"]</div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
        }
        <div style="text-align:center">
            <a href=" @Url.Action("Cahoc", "QLLichhoc")" class="btn btn-info">Back</a>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

