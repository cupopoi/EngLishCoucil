@model EnglishCoucil.Areas.Admin.Data.LichHoc

@{
    ViewBag.Title = "Suacahoc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thay đổi thông tin ca học</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "HomeAdmin", new { Area = "Admin" })">Home</a></li>
                    <li class="breadcrumb-item active">Thay đổi thông tin ca học</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@if (TempData["SuccessMessage"] != null)
{
    ViewBag.SuccessMessage = TempData["SuccessMessage"].ToString();
    TempData.Remove("SuccessMessage");
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-danger">@ViewBag.SuccessMessage</div>
}
@if (TempData["SuccessMessage"] != null)
{
    ViewBag.SuccessMessage = TempData["SuccessMessage"].ToString();
    TempData.Remove("SuccessMessage");
}
<div class="content">
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IDLichhoc)
                <div class="form-group">
                    <b>Thời gian bắt đầu:</b>
                    <div class="col-md-10">
                        @{
                            var gioFormatted = Model.TGBatDau?.ToString("hh\\:mm");
                        }
                        @Html.EditorFor(model => model.TGBatDau, new { htmlAttributes = new { @class = "form-control", @Value = gioFormatted }})
                        @Html.ValidationMessageFor(model => model.TGBatDau, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <b>Thời gian kết thúc:</b>
                    <div class="col-md-10">
                        @{
                            var gioFormatted1 = Model.TGKetThuc?.ToString("hh\\:mm");
                        }
                        @Html.EditorFor(model => model.TGKetThuc, new { htmlAttributes = new { @class = "form-control", @Value = gioFormatted1 }})
                        @Html.ValidationMessageFor(model => model.TGKetThuc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <b>Ngày:</b>
                    <h5 style="color:darkgray; font-size:15px;">*Lưu ý (Month/Day/Year)</h5>
                    <div class="col-md-10">
                        @{
                            var ngayFormatted = Model.Ngay?.ToString("MM/dd/yyyy");
                        }
                        @Html.TextBoxFor(model => model.Ngay, "{0:MM/dd/yyyy}", new { @class = "form-control", @Value = ngayFormatted })
                        @Html.ValidationMessageFor(model => model.Ngay, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
        }

        <div style="text-align:center">
            <a href=" @Url.Action("Cahoc", "QLLichhoc")" class="btn btn-success">Back</a>
        </div>
    </div>
</div>

