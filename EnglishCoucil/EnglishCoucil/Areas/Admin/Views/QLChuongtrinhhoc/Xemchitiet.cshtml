@model EnglishCoucil.Areas.Admin.Data.ChuongTrinhHoc

@{
    ViewBag.Title = "Xemchitiet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết chương trình học</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("HomeQL", "HomeAdmin", new { Area = "Admin" })">Home</a></li>
                    <li class="breadcrumb-item active">Chi tiết giảng viên</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div class="content">
    <div class="container-fluid">
        <table class="table">
            <tr>
                <td>Mã chương trình học :</td>
                <td>@Html.DisplayFor(model => model.IDChuongTrinh)</td>
            </tr>
            <tr>
                <td>Tên chương trình học:</td>
                <td>@Html.DisplayFor(model => model.TenChuongTrinh)</td>
            </tr>
            <tr>
                <td>Số buổi trong tuần:</td>
                <td>@Html.DisplayFor(model => model.SoBuoiHoc)</td>
            </tr>
            <tr>
                <td>Thời lượng của chương trình:</td>
                <td>@Html.DisplayFor(model => model.ThoiLuong)</td>
            </tr>
            <tr>
                <td>Giá chương trình học:</td>
                <td>@Html.DisplayFor(model => model.GiaTien) VND</td>
            </tr>
            <tr>
                <td>Mô tả chi tiết:</td>
                <td>@Html.DisplayFor(model => model.MoTa)</td>
            </tr>

        </table>
        <p>
            <div style="text-align:center">
                <a href=" @Url.Action("Chuongtrinhhoc", "QLchuongtrinhhoc")" class="btn btn-info">Back</a>
                <a href=" @Url.Action("Suachuongtrinh", "QLchuongtrinhhoc", new { IDct = Model.IDChuongTrinh })" class="btn btn-danger">Edit</a>
            </div>
        </p>
    </div>
</div>
